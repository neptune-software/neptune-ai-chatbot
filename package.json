{
  "name": "@neptune-software/neptune-ai-chatbot",
  "version": "1.0.4",
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neptune-software/neptune-ai-chatbot.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:js": "tsup app/components/index.ts --format cjs,esm --dts --external react --external react-dom --external @radix-ui/react-dialog --external lucide-react --external react-markdown --external react-syntax-highlighter --external chart.js --external react-chartjs-2 --external chartjs-plugin-zoom --external marked --external remark-gfm --external rehype-raw",
    "build:css": "tailwindcss -i ./app/globals.css -o ./dist/styles.css --minify",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Lint not configured'",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "chart.js": "^4.4.9",
    "chartjs-plugin-zoom": "^2.2.0",
    "framer-motion": "^12.24.7",
    "lucide-react": "^0.503.0",
    "marked": "^16.4.1",
    "react-chartjs-2": "^5.3.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.5.1",
    "typescript": "^5"
  }
}
